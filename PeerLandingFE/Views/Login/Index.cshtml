@{
    ViewData["Title"] = "Login";
    Layout = "LayoutLogin";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title text-center">LOGIN</h2>
                </div>
                <div class="card-body">
                    <form id="loginForm" method="post">
                        <div class="form-group">
                            <label for="email" class="form-label">Email</label>
                            <input id="email" type="email" name="email" class="form-control" placeholder="Masukkan email anda" required/>
                        </div>    
                        <div class="form-group">
                            <label for="password" class="form-label">Password</label>
                            <input id="password"  type="password" name="Password" placeholder="************" class="form-control" required />
                        </div>

                        <button type="button" class="btn btn-primary btn-block mt-3" onclick="submitLogin()">Login</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="~/js/login.js"></script>