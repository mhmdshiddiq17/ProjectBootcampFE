@{
	ViewData["Title"] = "Lender Page";
	Layout = "_LayoutLender";
}
<h1>Ini halaman lender</h1>
<div class="mb-3">
    <h3>Saldo Anda: <span id="lenderBalance">Loading...</span></h3>
</div>


<button class="btn btn-success mb-3" onclick="editModal()">Update Saldo</button>
<table class="table table-striped" id="userTable">
    <thead>
        <tr>
            <th>Name</th>
            <th>loan Id</th>
            <th>Amount</th>
            <th>Interest Rate</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
<!--Modal Update Saldo-->
<div class="modal fade" id="updateSaldoModal" tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addUserModalLabel">Add New <a href="#"></a></h5>
            </div>
            <div class="modal-body">
                <form id="addUserForm">
                    <div class="form-group">
                        <label for="newUserName">Isi saldo</label>
                         
                        <input type="number" id="amount" class="form-control" placeholder="Amount" required/>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="updateSaldoFnc()">Save</button>
            </div>
        </div>
    </div>
</div>



<!--update status modal-->
<div class="modal fade" id="updateStatusModal" tabindex="-1">
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="addUserModalLabel">Add New <a href="#"></a></h5>
        </div>
        <div class="modal-body">
            <form id="updateStatusForm">
                <div class="form-group">
                    <label for="newUserRole">Role</label>
                    <select class="form-control" id="newStatus" required>
                            <option value="requested">Requested</option>
                            <option value="funded">Funded</option>
                    </select>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" onclick="addUser()">Save</button>
        </div>
    </div>
</div>
</div>



@section Scripts {
    <script src="~/js/mstlender.js"></script>
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
